#!/bin/bash

set -euo pipefail

# shellcheck source=script/utilities.bash
source "$(dirname "$0")/utilities.bash"

mkdir -p bin

header "Fetch bash"
curl \
  -fsSL \
  -z bin/bash \
  -o bin/bash \
  https://github.com/robxu9/bash-static/releases/latest/download/bash-macos-x86_64

chmod +x bin/bash
bin/bash --version

# vim: set ft=sh :
